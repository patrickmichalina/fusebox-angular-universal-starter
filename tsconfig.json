{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "strictNullChecks": true,
    "noEmitHelpers": false,
    "noLib": false,
    "noUnusedLocals": true,
    "outDir": "dist/",
    "allowSyntheticDefaultImports": false,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "./.vscode",
    "./.fusebox",
    "./.ngc",
    "./dist",
    "./node_modules",
    "./coverage"
  ]
}