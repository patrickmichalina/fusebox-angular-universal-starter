{
  "rulesDirectory": [
    "../../node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules"
  ],
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      [
        "app"
      ],
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      [
        "pm",
        "app",
        "test",
        "i18n"
      ],
      "kebab-case"
    ],
    "use-view-encapsulation": false,
    "pipe-naming": [
      true,
      "camelCase",
      "kr"
    ],
    "array-type": [
      false
    ]
  }
}